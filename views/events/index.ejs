<!doctype html>
<html lang="en" style="height: 100%">
        <head>
                <meta charset="UTF-8" />
                <meta name="viewport" content="width=device-width, initial-scale=1.0" />
                <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
                <link rel="stylesheet" href="/bootstrap-icons/font/bootstrap-icons.min.css" />
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
                <title>Add User</title>
        </head>
        <body style="height: 100%">
                <div class="row" style="height: 100%">
                        <div class="col-xl-3 col-sm-4"><%- include('../shared/sidebar/sidebar.html', {user: user, selected: selected }); %></div>
                        <div class="col-xl-9 col-sm-8">
                                <% if (!selected.explore && !selected.attended && !selected.requests) { %>
                                        <h1>Please selecte an item on the sidebar</h1>
                                <% } %>
                                <% if (selected.explore) { %>
                                        <%- include('../shared/content-card.ejs', {title: 'New Events', events: newEvents, selected, createMode: false }); %>
                                <% } %>
                                <% if (selected.attended) { %>
                                        <%- include('../shared/content-card.ejs', {title: 'My Events', events: userEvents, selected, createMode: false }); %>
                                <% } %>
                                <% if (selected.requests) { %> 
                                        <%- include('../shared/content-card.ejs', { title: "Requests", events: requests, selected, createMode: false }); %>
                                <% } %>
                                <% if (createMode) { %>
                                        <%- include('../shared/create-event.html'); %>
                                <% } %>
                        </div>
                </div>
                <% if (lastResponse.toast) { %>
                        <div class="position-fixed top-0 end-0 p-3" style="z-index: 1055;">
                                <div class="toast show" role="alert" aria-live="assertive" id="liveToast" aria-atomic="false">
                                        <div class="toast-header">
                                                <strong class="me-auto">Notification</strong>
                                                <small class="text-muted">Just now</small>
                                                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                                        </div>
                                        <div class="toast-body">
                                                <%= lastResponse.message %>
                                        </div>
                                </div>
                        </div>
                <% } %>
                <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
        </body>
</html>
